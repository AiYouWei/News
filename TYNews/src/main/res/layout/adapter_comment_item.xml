<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:background="@color/common_color_white"
        android:orientation="vertical">

        <include layout="@layout/view_comment_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp">

            <include layout="@layout/view_line_horizontal" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:text="小白:" />

                <TextView
                    android:id="@+id/tvContent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_color_black"
                    android:textSize="14sp"
                    android:text="\t小白小白小白小白小" />

                <TextView
                    android:id="@+id/tvCity"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9F9F9F"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="北京" />

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_toRightOf="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9F9F9F"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:text="1分钟前" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    android:text="小白:" />

                <TextView
                    android:id="@+id/tvContent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_color_black"
                    android:textSize="14sp"
                    android:text="\t小白小白小白小白小" />

                <TextView
                    android:layout_toRightOf="@+id/tvName"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9F9F9F"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="北京" />

                <TextView
                    android:layout_toRightOf="@+id/tvCity"
                    android:id="@+id/tvTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9F9F9F"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:text="1分钟前" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/navi_default_bg"
                android:textSize="14sp"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:text="更多回复···" />

        </LinearLayout>

        <include layout="@layout/view_line_horizontal" />
    </LinearLayout>
</LinearLayout>