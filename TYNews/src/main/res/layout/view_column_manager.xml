<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/svContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_color_white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/column_order"
                android:textColor="@color/common_color_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/column_del" />

        </RelativeLayout>

        <com.news.views.DragGridView
            android:id="@+id/dgvSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="15dp"
            android:gravity="center"
            android:horizontalSpacing="14dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth"
            android:verticalSpacing="14px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_color_white"
            android:padding="10dp"
            android:text="@string/column_add"
            android:textColor="@color/common_color_black"
            android:textSize="14sp" />

        <com.news.views.OtherGridView
            android:id="@+id/dgvOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:padding="15dp"
            android:gravity="center"
            android:horizontalSpacing="14dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth"
            android:verticalSpacing="14px" />
    </LinearLayout>
</ScrollView>