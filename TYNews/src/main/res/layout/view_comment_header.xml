<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/user_default_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5F5F5F"
                android:textSize="16sp"
                android:text="小白" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_toRightOf="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9F9F9F"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="北京" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_toRightOf="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9F9F9F"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="1分钟前" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navi_default_bg"
                android:text="10"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:drawableLeft="@mipmap/news_comment" />

            <TextView
                android:id="@+id/tvPraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/navi_default_bg"
                android:layout_toLeftOf="@+id/tvComment"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="10"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/praise" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color_black"
            android:maxLines="2"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>