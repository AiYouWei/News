<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/navi_default_bg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/common_color_transparent"
            android:gravity="center_horizontal"
            android:text="版面选择"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/paper_more"
            android:textColor="@color/navi_default_bg"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvSelector"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/common_color_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/wvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>